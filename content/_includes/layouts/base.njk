<!doctype html>
<html lang="{{ metadata.language }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if title %}{{ title }} | {% endif %}{{ metadata.title }}</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="icon" href="/favicon.svg">
  <link rel="mask-icon" href="/favicon.svg" color="#000000">
  <meta name='description' content='{{ description or metadata.description }}' />
</head>
<body class="{{ body_class }}">
  <header class="app-header">
    <div class="app-header__content">
      <div class="app-header__branding">
        <a href="/" class="app-header__logo">{{ metadata.title }}</a>
      </div>
      <nav class="app-header__nav">
        <ul class="app-header__nav-list">
          {%- for entry in collections.nav %}
            <li class="app-header__nav-item">
              <a
                href="{{ entry.url }}"
                class="app-header__nav-link"
                {% if entry.url == page.url %} aria-current="page"{% endif %}>
                {{ entry.data.title }}
              </a>
            </li>
          {%- endfor %}
        </ul>
      </nav>
    </div>
  </header>
  <main class="app-main {{ main_class }}">
    <div class="app-main__content">
      {{ content | safe }}
    </div>
  </main>
  <footer class="app-footer">
    <div class="app-footer__content">
      <p class="app-footer__copyright">Â© {% year %} {{ metadata.author.name }}</p>
    </div>
  </footer>
</body>
</html>
